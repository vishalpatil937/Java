	public String Add(String word,String meaning) {
		int map;
		if(contains(this.words,word)) {
			return "Exists";
		}
		else {
			this.words[this.words.length]=word;
			map=this.words.length;
			this.meaning[map]=meaning;
			this.Map[this.Map.length]=map;
		}
		return "Added";
	}
	
	public String getMeaning(String word) {
		String m;
		if(!contains(this.words,word)) {
			return "Not in dictionary";
		}
		else {
			m=this.words.indexOf(word);
		}
	}
}
