package Test2;

public class HappyNumber {
	public static void main(String a[]) {
		int number=487;
		happy(number);
		
		
	}
	static void happy(int number) {
		int sum=0;
		int repeat;
		int i=0;
		while(number!=1) {
			sum=0;
			while(number>0) {
				sum+=(int) Math.pow(number%10, 2);
				number/=10;
			}
			if(i==0) {
				repeat=sum;
				i++;
			}
			number=sum;
			System.out.println(sum);
		}
	}
}	
