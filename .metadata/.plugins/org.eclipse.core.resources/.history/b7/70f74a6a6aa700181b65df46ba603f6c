package Test2;

public class Zero {
	public static void main(String[] s) {
		int arr[]={5,8,0,1,4,0,3,9,7,0};
		int len=arr.length;
		System.out.println(len);
		int temp;
		int zero_index;
		for(int i=0;i<len;i++) {
			System.out.println(i);
			temp=arr[i];
			if(temp==0) {
				zero_index=i;
				if(arr[i+1]!=0 && i+1<len) {
					arr[zero_index]=arr[i+1];
					arr[i+1]=0;
				}
				else {
					continue;
				}
			}
		}
		for(int i=0;i<arr.length;i++)
			System.out.println(arr[i]);
	}

		
}