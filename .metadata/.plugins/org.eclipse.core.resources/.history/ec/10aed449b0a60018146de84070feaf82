import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class Employee {
	private List<String> design =new ArrayList<String>();
	private List<String> name=new ArrayList<String>();
	private List<String> dept=new ArrayList<String>();
	private List<Integer> salary=new ArrayList<Integer>();
	
//	Employee(String empname,String dept,String design,int salary){
