	public String display_all() {
		return Arrays.toString(name.toArray());
	}
	
	public int getAllowance(String design1) {
		int ret=0;
		if(design1=="PL")
			ret=1600;
		else if(design1=="TM")
			ret=1300;
		else if(design1=="TL")
			ret=1270;
		else if(design1=="Admin")
			ret=1500;
		else if(design1=="Others")
			ret=1100;
		return ret;
	}
}

